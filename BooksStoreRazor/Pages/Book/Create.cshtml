@page
@model BooksStoreRazor.Pages.Book.CreateModel

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Books.BookName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Books.BookName" class="form-control" />
                    </div>
                    <span asp-validation-for="Books.BookName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Books.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Books.Author" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Books.ISBN"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Books.ISBN" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}